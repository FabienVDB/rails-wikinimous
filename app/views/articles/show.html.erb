<div class="header d-flex justify-content-between align-items-center p-3 mb-3">
  <%= link_to "Wikinimous", articles_path%>
  <%= link_to "New article", new_article_path%>
</div>
<div class="container">
  <% content_for(:title) do %>
    Wikinimous - <%= @article.title %>
  <% end %>

  <article>
    <h1>
      <%= @article.title %>
      <small>
        <%= link_to edit_article_path(@article) do %><i class="fa fa-pencil"></i><% end %>

        <%= link_to article_path(@article), method: :delete, data: { confirm: 'Are you sure?' } do %>
          <i class="fa fa-trash-o"></i>
        <% end %>
      </small>
    </h1>

    <hr>
    <%= @article.markdown_content %>
  </article>
</div>
